<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXMasonryPane?>
<?import com.jfoenix.controls.JFXSpinner?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
            minHeight="-Infinity" minWidth="-Infinity" prefHeight="480.0" prefWidth="600.0" styleClass="root"
            xmlns="http://javafx.com/javafx/8.0.121" fx:controller="ui.search.SearchController">
    <stylesheets>
        <URL value="@../stylesheets/searchScreen.css"/>
    </stylesheets>
    <children>
        <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="50.0" prefWidth="600.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <JFXTextField fx:id="textField_searchBar" focusColor="#b0bec5" maxWidth="1.7976931348623157E308"
                              onKeyTyped="#handleSearchBarKeyTyped" promptText="Search" styleClass="text-field"
                              unFocusColor="#eceff1" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets right="25.0"/>
                    </HBox.margin>
                </JFXTextField>
                <JFXButton fx:id="button_searchButton" buttonType="RAISED" contentDisplay="GRAPHIC_ONLY"
                           defaultButton="true" onAction="#handleSearchButtonAction" HBox.hgrow="ALWAYS">
                    <graphic>
                        <FontAwesomeIconView fill="#eceff1" glyphName="SEARCH" size="32.0"/>
                    </graphic>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </JFXButton>
            </children>
            <padding>
                <Insets left="25.0" right="25.0" top="15.0"/>
            </padding>
        </HBox>
        <StackPane layoutY="55.0" prefHeight="425.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0"
                   AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="55.0">
            <children>
                <JFXMasonryPane fx:id="masonryPane_searchResults" maxHeight="1.7976931348623157E308"
                                maxWidth="1.7976931348623157E308" prefHeight="425.0" prefWidth="600.0"
                                StackPane.alignment="CENTER">
                    <StackPane.margin>
                        <Insets bottom="15.0" left="25.0" right="25.0" top="15.0"/>
                    </StackPane.margin>
                </JFXMasonryPane>
                <JFXSpinner fx:id="spinner_resultSpinner" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="200.0"
                            prefWidth="200.0" visible="false" StackPane.alignment="CENTER">
                    <StackPane.margin>
                        <Insets bottom="10.0" left="25.0" right="25.0" top="10.0"/>
                    </StackPane.margin>
                </JFXSpinner>
            </children>
        </StackPane>
    </children>
</AnchorPane>
